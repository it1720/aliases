alias htc="cd ~/HTCsync/ && ls"
alias images="cd ~/Images/ && ls"
alias htcimg="cd ~/Images/HTC_Cam/ && ls"
alias voyages='cd ~/HTCsync/Voyages/ && ls'

#mounting windows C:/ disk => edit the sda2 to your configuration
alias createCbeforeMount="sudo mkdir /media/C"
alias mountc="sudo mount /dev/sda2 /media/C && max2"
alias mc="mountc"
alias umountc="cd && sudo umount /media/C && echo '/media/C umounted'"
alias umc="umountc"

alias backupsync="csync /media/C/Users/Max2/Dropbox/BackUped /home/maxlath/Documents/BackUped"